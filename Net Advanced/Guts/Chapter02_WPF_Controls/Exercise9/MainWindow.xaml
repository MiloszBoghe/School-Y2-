<Window x:Class="Exercise9.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exercise9"
        mc:Ignorable="d"
        Title="CheckBox variations" Height="300" Width="300">
    <Grid>
        <CheckBox Content="Standard checkbox"></CheckBox>
        <CheckBox Margin="0,40,0,0">
            <StackPanel Orientation="Horizontal">
                <Image Source="images/kameleon.jpg" Width="50"></Image>
                <TextBlock FontWeight="Bold" FontSize="16">Image checkbox</TextBlock>
            </StackPanel>
        </CheckBox>
        <CheckBox Background="Yellow" Foreground="White" FontWeight="Bold" Margin="0,80,0,0">
            <TextBlock>
                <TextBlock.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="Red" Offset="0"/>
                        <GradientStop Color="Blue" Offset="0.5"/>
                        <GradientStop Color="Green" Offset="1"/>
                    </LinearGradientBrush>
                </TextBlock.Background>
                Checkbox with backgrounds
            </TextBlock>
        </CheckBox>
    </Grid>
</Window>
